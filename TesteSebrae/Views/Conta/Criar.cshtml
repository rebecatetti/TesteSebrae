@model TesteSebrae.Domain.Entities.ContaDTO

@{
    ViewData["Title"] = "Criar Conta";

	<form method="post">
		<div class="border p-3 mt-4">
			<div class="row pb-2">
				<h2 class="text-primary">Criar Conta</h2>
				<hr />
			</div>

			<div asp-validation-summary="All"></div>
			<div class="mb-3">
				<label asp-for="Nome"></label>
				<input asp-for="Nome" class="form-control" />
				<span asp-validation-for="Nome" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Descricao"></label>
				<input asp-for="Descricao" class="form-control" />
				<span asp-validation-for="Descricao" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary" style="width:150px">Criar</button>
			<a asp-controller="Conta" asp-action="Index" class="btn btn-secondary" style="width:150px">
				Voltar
			</a>
		</div>
	</form>



}